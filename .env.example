# ================================================
# OzMirror Environment Configuration
# ================================================
# Copy this file to .env and update with your values

# ----------------
# Redis
# ----------------
# Redis URL (will use password from REDIS_PASSWORD)
REDIS_URL=redis://redis:6379
# Redis password for authentication
REDIS_PASSWORD=your_redis_password_here

# ----------------
# MySQL (Config Service Storage)
# ----------------
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=ozmirror
MYSQL_USER=ozmirror
MYSQL_PASSWORD=your_mysql_password_here_change_in_production
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here_change_in_production

# ----------------
# Configuration Service
# ----------------
CONFIG_SERVICE_URL=http://config-service:8000

# ----------------
# Security
# ----------------
# API key for module registration and configuration updates
API_KEY=generate_a_random_32_char_key_here

# Allowed CORS origins for the Config Service (comma-separated)
ALLOWED_ORIGINS=http://localhost,http://localhost:80,https://ozmirror.azuriki.com

# ----------------
# WebSocket Bridge
# ----------------
WEBSOCKET_PORT=8080
# Allowed CORS origins for the WebSocket Bridge (comma-separated)
ALLOWED_CORS_ORIGINS=http://localhost,http://localhost:80,https://ozmirror.azuriki.com

# ----------------
# Module API Keys
# ----------------
# Weather Module (OpenWeatherMap)
WEATHER_API_KEY=your_openweathermap_api_key_here

# Google Calendar (Calendar Module) - Optional
GOOGLE_CALENDAR_CLIENT_ID=
GOOGLE_CALENDAR_CLIENT_SECRET=

# ----------------
# Gateway Ports
# ----------------
# Host ports mapped from the Nginx gateway (change if defaults conflict)
HTTP_PORT=80
HTTPS_PORT=443

# ----------------
# Module Tuning
# ----------------
# Maximum number of concurrent system-stats widget instances (default: 50)
MAX_INSTANCES=50

# ----------------
# System
# ----------------
TZ=America/New_York
NODE_ENV=production
LOG_LEVEL=info
